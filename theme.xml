<?xml version="1.0"?>
<Theme>
	<ImageSizes>
		<Mini width="260" height="260" />
		<List width="520" height="520" />
		<Normal width="520" height="520" />
		<Big width="1200" height="1200" />
	</ImageSizes>
	<Features>
		<Checkout>
			<SinglePage supported="true" default="default" />
			<MultiPage supported="false" />
		</Checkout>
		<GiftCards supported="true" />
		<ProductBundles supported="true" />
		<ProductListFilters supported="true" />
		<BrandProductListFilters supported="true" />
		<CampaignProductListFilters supported="true" />
	</Features>
	<Settings>
		<Doctype standard="HTML5" />
	</Settings>
	<ThemeSettings>
		<Setting type="select" name="color_theme" label="color_theme" default="theme">
			<Option value="theme-black" label="Black" />
			<Option value="theme-brown" label="Brown" />
			<Option value="theme-green" label="Green" />
			<Option value="theme-mint" label="Mint" />
			<Option value="theme-pink" label="Pink" />
			<Option value="theme-purple" label="Purple" />
			<Option value="theme" label="White" />
		</Setting>
	</ThemeSettings>
</Theme>
